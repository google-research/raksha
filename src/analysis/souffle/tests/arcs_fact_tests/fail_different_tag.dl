// Original Arcs manifest:
// Fails when different tag is claimed.
// #Ingress: P1
// #Fail: hc:P2.bar is trusted
//particle P1
//  foo: writes Foo {}
//  claim foo is notTrusted
//particle P2
//  bar: reads Foo {}
//  check bar is trusted
//recipe R
//  P1
//    foo: writes h
//  P2
//    bar: reads h
#include "taint.dl"
#include "fact_test_helper.dl"

claimHasTag("R.P1.foo", "notTrusted").
edge("R.P1.foo", "R.h.Foo").
edge("R.h.Foo", "R.P2.bar").

testPasses("fail_different_tag") :-
  !mayHaveTag("R.P2.bar", "trusted"),
  mayHaveTag("R.P2.bar", "notTrusted").
