#include "src/analysis/souffle/taint.dl"
#include "src/analysis/souffle/fact_test_helper.dl"
#include "src/analysis/souffle/tests/arcs_fact_tests/integrity_tag_prop_helper.dl"

isAccessPath("a").
isAccessPath("b").
isAccessPath("c").
isAccessPath("d").
isAccessPath("e").

// Make "c" the target of edges from "a" and "b".
edge("a", "c").
edge("b", "c").

// Make "e" the target of edges from "c" and "d".
edge("c", "e").
edge("d", "e").

// If we apply "integ1" and "integ2" to "a" and "b", they should also appear on
// "c".
hasAppliedIntegrityTag("a", "defaultOwner", ["integ1", nil]).
hasAppliedIntegrityTag("b", "defaultOwner", ["integ1", nil]).

hasAppliedIntegrityTag("a", "defaultOwner", ["integ2", nil]).
hasAppliedIntegrityTag("b", "defaultOwner", ["integ2", nil]).

expectHasIntegrityTag("a", "defaultOwner", ["integ1", nil]).
expectHasIntegrityTag("b", "defaultOwner", ["integ1", nil]).
expectHasIntegrityTag("c", "defaultOwner", ["integ1", nil]).

expectHasIntegrityTag("a", "defaultOwner", ["integ2", nil]).
expectHasIntegrityTag("b", "defaultOwner", ["integ2", nil]).
expectHasIntegrityTag("c", "defaultOwner", ["integ2", nil]).

// If we apply "integ1" to d, it should also appear on e.
hasAppliedIntegrityTag("d", "defaultOwner", ["integ1", nil]).

expectHasIntegrityTag("d", "defaultOwner", ["integ1", nil]).
expectHasIntegrityTag("e", "defaultOwner", ["integ1", nil]).

// If we apply "integ3" to "a" and not "b", however, it should not appear on
// "c".
hasAppliedIntegrityTag("a", "defaultOwner", ["integ3", nil]).
expectHasIntegrityTag("a", "defaultOwner", ["integ3", nil]).

// Similarly if we apply "integ4" only to "b".
hasAppliedIntegrityTag("b", "defaultOwner", ["integ4", nil]).
expectHasIntegrityTag("b", "defaultOwner", ["integ4", nil]).

// If we apply "integ5" to "c" and "d" directly, it should appear on "e".
hasAppliedIntegrityTag("c", "defaultOwner", ["integ5", nil]).
hasAppliedIntegrityTag("d", "defaultOwner", ["integ5", nil]).

expectHasIntegrityTag("c", "defaultOwner", ["integ5", nil]).
expectHasIntegrityTag("d", "defaultOwner", ["integ5", nil]).
expectHasIntegrityTag("e", "defaultOwner", ["integ5", nil]).
